@model CSharp_DIO_FRONT_END_MVC.Models.Contato
@{
    ViewData["Title"] = "Editar contato";
}

<h1>Editar  Contato</h1>

<div class="container">

    <form asp-action="Editar">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="Ativo" class="control-label"></label>
                    <input type="checkbox" asp-for="Ativo" class="form-check-input"  />
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <br>
    <a asp-action="Index">Voltar para a listagem</a>

</div>